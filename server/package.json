{
  "name": "lightning-tip-backend",
  "private": true,
  "version": "0.1.0",
  "description": "The lightning tip twitch extension backend",
  "scripts": {
    "start": "yarn build && node ./build/app.js",
    "start:watch": "yarn build:watch & nodemon ./build/app.js",
    "build": "tsc -p .",
    "build:watch": "npm run build -- -w",
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts' --fix",
    "clean": "rm -rf ./build"
  },
  "author": {
    "name": "Cavan Flynn",
    "email": "cavan.m.flynn@gmail.com"
  },
  "dependencies": {
    "@radar/lnrpc": "^0.7.0-beta-rc1.0",
    "body-parser": "1.19.0",
    "express": "4.17.3",
    "reflect-metadata": "0.1.13",
    "routing-controllers": "0.7.7",
    "typedi": "0.8.0"
  },
  "devDependencies": {
    "@radar/tslint-config": "^5.0.1",
    "@types/body-parser": "1.17.0",
    "@types/express": "4.17.0",
    "@types/node": "12.0.10",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "nodemon": "1.19.1",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint",
      "git add"
    ]
  }
}
